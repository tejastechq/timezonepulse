{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "preserveSymlinks": true,
    "isolatedModules": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
} 