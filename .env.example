# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration
SESSION_SECRET=your_secure_session_secret_min_32_chars_long
ADMIN_API_SECRET=your_secure_admin_secret_min_32_chars_long
CSP_REPORT_URL=https://your-csp-reporting-endpoint.com/report

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=60

# CORS Configuration (comma-separated values)
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,OPTIONS

# Cookie Security
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict