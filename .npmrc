# Use strict-peer-dependencies to prevent mismatched React versions
strict-peer-dependencies=false

# Make sure same-version peer dependencies are resolved properly
node-linker=hoisted

# Use legacy peer dependencies for better compatibility with React 19
legacy-peer-deps=true

# Ensure all packages use the same version of React
shared-workspace-lockfile=false

# Enable package hoisting for better deduplication
# This helps when multiple packages depend on React
hoist=true 